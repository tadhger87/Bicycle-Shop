<p id="notice"><%= notice %></p>
<h1>Catalog</h1>

<table class="catalog">

<% @items.each do |item| %>
  <tr>
    <td>
        <div class="image">
            <%= link_to (image_tag item.image_url, :style => "height:100px"), item %>
        </div>
    </td>
    <td>
        <div class="name">
            <%= link_to item.name, item %>
        </div>
        <div class="description">
            <%=h item.description %>
        </div>
        <div class="price">
            <%= number_to_currency(item.price, :unit => "&pound;") %>
        </div>
        
<ul class="items">
  <%#= render @items %>
</ul>        
        
       
    </td>
  </tr>

<% end %>